{
  "name": "lbp",
  "version": "1.0.0",
  "description": "Tools for those who find the Live Build system too complex",
  "main": "main.js",
  "license": "Apache-2.0",
  "bin": {
    "lbp": "./build/main.js"
  },
  "scripts": {
    "start": "node ./build/main.js",
    "build": "tsc -p .",
    "dev": "npx ts-node ./src/main.ts",
    "pack": "pkg ."
  },
  "dependencies": {
    "@mykeels/gpg": "^0.7.18",
    "@types/node": "^18.11.9",
    "cac": "^6.7.14",
    "kleur": "^4.1.5",
    "toml": "^3.0.0"
  },
  "pkg": {
    "scripts": "build/**/*.js",
    "outputPath": "dist",
    "targets": [
      "node18-linux-x64",
      "node18-linux-arm64"
    ]
  },
  "devDependencies": {
    "tsc": "^2.0.4",
    "typescript": "^4.9.3"
  }
}
